{
  "exp": {
    "name": "HDAFNet_DF1_320px_u1_v1_s1",
    "mixed_precision": false,
    "jpa_optimization": true
  },
  "generator": {
    "img_dir": "datasets/nyu_v2/train_rgb",
    "mask_dir": "datasets/nyu_v2/train_mask",
    "depth_dir": "datasets/nyu_v2/train_depth",
    "use_data_augmentation": true,
    "shuffle_seed": 9,
    "img_mode": "color"
  },
  "validation": {
    "img_dir": "datasets/nyu_v2/test_rgb",
    "mask_dir": "datasets/nyu_v2/test_mask",
    "depth_dir": "datasets/nyu_v2/test_depth",
    "weights_file": "tests/verifs/joint_fpn_base1_320px/joint_fpn_base1_320px-100.hdf5"
  },
  "hdaf": {
    "s": 1,
    "u": 1,
    "v": 1
  },
  "model": {
    "class_name": "models.hdaf_net.HdafNet",
    "optimizer": {
      "name": "SGD",
      "momentum": 0.9
    },
    "lr": {
      "policy": "mdr",
      "initial": 1e-10,
      "maximal_learning_rate": 1e-10,
      "step_size": 3975,
      "power": 0.9,
      "cycle": false
    },
    "width": 320,
    "height": 256,
    "channels": 3,
    "classes": 41,
    "seg_loss": "categorical_crossentropy",
    "alpha": 0.25,
    "gamma": 2.0,
    "depth_loss": "mse",
    "backbone_pretrain": "imagenet",
    "backbone": "DF1",
    "loss_weights": {
      "main_segmentation": 1.0,
      "main_depth": 1.0,
      "deep_segmentation": 0.4,
      "deep_depth": 0.4
    }
  },
  "trainer": {
    "num_epochs": 200,
    "batch_size": 8,
    "verbose_training": true,
    "workers": 1
  },
  "callbacks": {
    "checkpoint_monitor": "val_loss",
    "checkpoint_mode": "min",
    "checkpoint_save_best_only": true,
    "checkpoint_save_weights_only": true,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true
  }
}