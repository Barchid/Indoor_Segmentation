{
  "exp": {
    "name": "new_fast_scnn_nyuv2"
  },
  "generator": {
    "img_dir": "datasets/nyu_v2/train_rgb",
    "mask_dir": "datasets/nyu_v2/train_mask",
    "depth_dir": null,
    "use_data_augmentation": true,
    "shuffle_seed": 9
  },
  "model": {
    "class_name": "models.fast_scnn_nyuv2.FastScnnNyuv2",
    "optimizer": "SGD",
    "learning_rate": 0.045,
    "momentum": 0.9,
    "width": 640,
    "height": 480,
    "classes": 41,
    "alpha": 0.25,
    "gamma": 2.0,
    "loss": "CE"
  },
  "trainer": {
    "num_epochs": 50,
    "batch_size": 8,
    "verbose_training": true,
    "workers": 1
  },
  "callbacks": {
    "checkpoint_monitor": "loss",
    "checkpoint_mode": "min",
    "checkpoint_save_best_only": true,
    "checkpoint_save_weights_only": true,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true
  }
}