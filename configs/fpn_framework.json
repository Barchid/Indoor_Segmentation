{
  "exp": {
    "name": "FUN_224px_cross",
    "mixed_precision": false,
    "jpa_optimization": true
  },
  "generator": {
    "img_dir": "datasets/nyu_v2/train_rgb",
    "mask_dir": "datasets/nyu_v2/train_mask",
    "depth_dir": null,
    "use_data_augmentation": true,
    "shuffle_seed": 15,
    "img_mode": "color"
  },
  "validation": {
    "img_dir": "datasets/nyu_v2/test_rgb",
    "mask_dir": "datasets/nyu_v2/test_mask",
    "depth_dir": null,
    "weights_file": "tests/verifs/bifpn_merge_224px/Bi_FPN_merge_224px-99.hdf5"
  },
  "model": {
    "class_name": "models.fun.Fun",
    "optimizer": {
      "name": "SGD",
      "momentum": 0.9
    },
    "lr": {
      "policy": "mdr",
      "initial": 0.01,
      "maximal_learning_rate": 10e-1,
      "step_size": 80400,
      "power": 0.9,
      "cycle": false
    },
    "width": 224,
    "height": 224,
    "channels": 3,
    "classes": 41,
    "loss": "categorical_crossentropy",
    "gamma": 2.0,
    "alpha": 0.25,
    "backbone_pretrain": "imagenet",
    "backbone": "mobilenet_v2"
  },
  "trainer": {
    "num_epochs": 200,
    "batch_size": 16,
    "verbose_training": true,
    "workers": 1
  },
  "callbacks": {
    "checkpoint_monitor": "val_loss",
    "checkpoint_mode": "min",
    "checkpoint_save_best_only": true,
    "checkpoint_save_weights_only": true,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true
  }
}