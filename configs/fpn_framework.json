{
  "exp": {
    "name": "FPN_framework",
    "mixed_precision": false
  },
  "generator": {
    "img_dir": "datasets/nyu_v2/train_depth",
    "mask_dir": "datasets/nyu_v2/train_mask",
    "depth_dir": null,
    "use_data_augmentation": true,
    "shuffle_seed": 9,
    "img_mode": "grayscale"
  },
  "validation": {
    "img_dir": "datasets/nyu_v2/test_depth",
    "mask_dir": "datasets/nyu_v2/test_mask",
    "depth_dir": null
  },
  "model": {
    "class_name": "models.fpn_net.FpnNet",
    "optimizer": {
      "name": "SGD",
      "momentum": 0.9
    },
    "lr": {
      "initial": 0.01,
      "power": 0.9,
      "cycle": false
    },
    "width": 224,
    "height": 224,
    "channels": 1,
    "classes": 41,
    "loss": "categorical_crossentropy",
    "backbone_pretrain": "imagenet",
    "backbone": "DF1"
  },
  "trainer": {
    "num_epochs": 100,
    "batch_size": 16,
    "verbose_training": true,
    "workers": 1
  },
  "callbacks": {
    "checkpoint_monitor": "val_loss",
    "checkpoint_mode": "min",
    "checkpoint_save_best_only": true,
    "checkpoint_save_weights_only": true,
    "checkpoint_verbose": true,
    "tensorboard_write_graph": true
  }
}